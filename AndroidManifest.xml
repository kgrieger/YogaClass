<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kgrieger.yogaclass"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kgrieger.yogaclass.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kgrieger.yogaclass.EditPose"
            android:label="@string/title_activity_edit_pose"
            android:parentActivityName="com.kgrieger.yogaclass.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgrieger.yogaclass.MainActivity" />
        </activity>
        <activity
            android:name="com.kgrieger.yogaclass.EditClass"
            android:label="@string/title_activity_edit_class"
            android:parentActivityName="com.kgrieger.yogaclass.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgrieger.yogaclass.MainActivity" />
        </activity>
    </application>

</manifest>
